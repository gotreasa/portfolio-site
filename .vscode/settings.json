{
  "grammarly.config.suggestions.OxfordComma": true,
  "grammarly.config.suggestions.PunctuationWithQuotation": false,
  "grammarly.files.include": [
    "*.md",
    "**/*.txt",
    "content/*.md",
    "content/**/*.md",
    "content/*.html",
    "content/**/*.html"
  ],
  "grammarly.selectors": [
    {
      "language": "markdown",
      "scheme": "file"
    },
    {
      "language": "latex",
      "scheme": "file"
    }
  ],
  "grammarly.config.documentDialect": "british"
}
